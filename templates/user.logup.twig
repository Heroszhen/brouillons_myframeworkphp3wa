{% extends "base.twig" %}

{% block content %}
<div id="logup" class="container pt-4">
    <div class="row justify-content-center">
        <h2 class="col-12 text-center">Inscrivez-vous</h2>
        <div class="col-md-7 col-lg-5">
            <form method="POST" action="/inscription">
                <div>{{parameters['msgalert']|raw }}</div>
                <div class="form-group">
                    <label for="useremail">Email</label>
                    <input type="text" class="form-control" id="useremail" name="useremail"  placeholder="mail" value="{{parameters['post']['useremail']}}">
                </div>
                <div class="form-group">
                    <label for="userpassword">Mot de passe</label>
                    <input type="password" class="form-control" id="userpassword" name="userpassword"  placeholder="mot de passe" value="{{parameters['post']['userpassword']}}">
                </div>
                <button type="submit" class="btn btn-primary">Envoyer</button>
            </form>
        </div>
    </div>
</doiv>
{% endblock %}